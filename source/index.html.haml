- content_for(:title, 'Roleplay')

%div.c-games
  - data.index.each do |game|
    %div.c-game
      %h2= game.name
      %div.c-session-list
        - game.sessions.reverse.each do |session|
          - link = session_link(game, session)
          - picture = session_picture(game, session)
          - description = session_description(game, session)
          - date = session_date(session)
          %a.c-session-item{href: link}
            %div.c-session-item--picture{style: "background-image: url(#{picture})"}
            %div.c-session-item--details
              %div.c-session-item--name= session.name
              %div.c-session-item--description= description
              %div.c-session-item--date= date
